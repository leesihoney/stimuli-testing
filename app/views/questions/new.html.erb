
<div class = "container">
	<!-- Question Part -->
  	<h1> Question <%= @question.question_num %> </h1>
	<!-- upload donation type picture -->
  	<h2> Donation Type </h2>
 	<%= image_tag (@question.getDonationTypePic), :class => "donation" %>

  <!-- need to fix this button soon -->
  <table class = "table">
    <thead>
      <tr>
        <th> Recipient A </th>
        <th> Recipient B </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> 
          <div class = "pics">
            <div class = "pic">
              <%= image_tag (@recipientA.getSizeLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientA.getAccessLinksAPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientA.getIncomeLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientA.getPovertyLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientA.getLastDonationLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientA.getTotalDonationLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientA.getDistLinksPic), :class => "imagePic"%>
            </div>
          </div>
        </td>
        <td>
          <div class = "pics">
            <div class = "pic">
              <%= image_tag (@recipientB.getSizeLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientB.getAccessLinksBPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientB.getIncomeLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientB.getPovertyLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientB.getLastDonationLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientB.getTotalDonationLinksPic), :class => "imagePic"%>
            </div>
            <div class = "pic">
              <%= image_tag (@recipientB.getDistLinksPic), :class => "imagePic"%>
            </div>
          </div>
      </td>
      </tr>
    </tbody>
  </table>

  <div class = "choice">
  	<h4> Recipient Choice </h4>
	  <%= simple_form_for(@question) do |f| %>
	  	<%= f.input :recipient_choice, label: "", collection: ['Recipient A', 'Recipient B'], as: :radio_buttons %>
	  	<%= f.button :submit, 'Submit', class: 'btn btn-primary'%>
  </div>

	<div class = "otherButtons">
	 	  <%= f.button :submit, 'End Session', class: 'btn btn-default', data: {toggle: "modal", target: "#endSessionModal"} %>
	</div>


  <!-- Modal -->
  <div class="modal fade" id="endSessionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"> Warning! </h5>
        </div>
        <div class="modal-body">
          Do you want to end the testing?
        </div>
        <div class="modal-footer">
          <%= f.button :submit, 'No', class: 'btn btn-secondary', data: {dismiss: 'modal'} %>
          <%= f.button :submit, 'Yes', class: 'btn btn-primary' %>
   <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="//code.jquery.com/jquery-1.12.4.js" type="text/javascript">
$(document).ready(function() {
    $('body').css('background-color', 'white');
    $('.my-navbar').css('background', '#f5f5f5');
});
</script>