<p id="notice"><%= notice %></p>

<h1>Recipients</h1>

<table>
  <thead>
    <tr>
      <th>Organization size</th>
      <th>Food access</th>
      <th>Income level</th>
      <th>Poverty level</th>
      <th>Last donation</th>
      <th>Total donation</th>
      <th>Travel time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.organization_size %></td>
        <td><%= recipient.food_access %></td>
        <td><%= recipient.income_level %></td>
        <td><%= recipient.poverty_level %></td>
        <td><%= recipient.last_donation %></td>
        <td><%= recipient.total_donation %></td>
        <td><%= recipient.travel_time %></td>
        <td><%= link_to 'Show', recipient %></td>
        <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
        <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

